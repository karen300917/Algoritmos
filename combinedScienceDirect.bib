author = {Ralia Thoma and Nektarios Farassopoulos and Christina Lousta},
keywords = {STEAM-EDU, UDL, Connectivism, Plugged-in and unplugged activities, Primary school, Content analysis},
abstract = {This paper presents four teachers’ design and implementation of an international eTwinning project within the Universal Design Learning (UDL) framework and the pedagogical theory of connectivism, aiming to provide meaningful access to STEAM education for pupils with diverse learning needs by introducing them to key competences for lifelong learning. The results of the qualitative content analysis reveal the advantages of this effort, including the improvement of the learning process, learners' active participation, and self-reflection through student-based assessment, teachers' professional development, but also considerations regarding planning and specifying activities, class schedules, course load, and the creation of self- or peer-assessment rubrics.}


@article{CAMPBELL2022e09191,
title = {Impact of a Scratch programming intervention on student engagement in a Nigerian polytechnic first-year class: verdict from the observers},
journal = {Heliyon},
