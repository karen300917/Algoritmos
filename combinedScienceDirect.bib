@article{LOUSTAU2022100544,
title = {Characterizing the research-practice gap in children’s interactive storytelling systems},
journal = {International Journal of Child-Computer Interaction},
volume = {34},
pages = {100544},
year = {2022},
issn = {2212-8689},
